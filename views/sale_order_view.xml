<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cs_quotation_order_tree_view" model="ir.ui.view">
            <field name="name">sale.order.tree.view</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <tree create="false" delete="false">
                    <field name="partner_id"/>
                    <field name="mem_id"/>
                    <field name="name" string="Inquiry No."/>
                    <field name="inquiry_date" />
                    <field name="deadline" />
                    <field name="source_lang_id"/>
                    <field name="target_lang_ids" widget="many2many_tags"/>
                    <field name="pending_since"/>
<!--                    <field name="hour_day" invisible="1"/>-->
                    <field name="state" invisible="1"/>
                    <field name="has_revision" invisible="1"/>
                    <field name="main_quotation_id" invisible="1"/>
                    <field name="to_show" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Checklist Popup to fill values -->
        <record id="quotation_checklist_view" model="ir.ui.view">
            <field name="name">sale.order.form.checklist.view</field>
            <field name="model">sale.order</field>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <form create="false" delete="false">
                    <sheet>
                        <group string="Special Checklist">
                            <field name="checklist_line" nolabel="1" force_save="1">
                                <tree editable="bottom" create="0" delete="0">
                                    <field name="checklist_id" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" required="0" readonly="1" force_save="1"/>
                                    <field name="option" required="1"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="checklist_id" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" readonly="1" force_save="1"/>
                                            <field name="option" readonly="1" force_save="1"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </group>

                        <group>
                            <field name="state" invisible="1"/>
                            <div width="70%">
                                <label string="Was deadline breached for this ASN?"
                                       for="deadline_breach"
                                       class="oe_inline"
                                       attrs="{'invisible': [('state','!=', 'pending')]}"/>
                                <field name="deadline_breach" required="1"
                                       attrs="{'invisible': [('state','!=', 'pending')]}"/>
                            </div>

                            <div width="70%">
                                <label string="Actual Delivery Time"
                                       for="delivered_on"
                                       attrs="{'invisible': [('deadline_breach','=','no')]}"
                                       class="oe_inline"/>
                                <field name="delivered_on"
                                       string="Actual Delivery Time"
                                       attrs="{'invisible': [('deadline_breach','=','no')]}"/>
                            </div>
                        </group>

                        <group>
                            <group>
                                <field name="additional_comments" nolabel="1" placeholder="Additional Comments .............."/>
                            </group>
                        </group>
                        <footer>
                            <button name="action_quotation_send" string="Confirm" type="object"
                                    class="btn-primary"/>
                            <button string="Cancel" class="btn-default" special="cancel" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Add Translation level Popup to fill values -->
        <record id="quotation_add_translation_level_view" model="ir.ui.view">
            <field name="name">sale.order.form.translation.level.view</field>
            <field name="model">sale.order</field>
            <field name="priority">101</field>
            <field name="arch" type="xml">
                <form>
                    <field name="add_translation_level_line" nolabel="1" force_save="1">
                        <tree editable="bottom">
                            <field name="service_level_id" string="Translation Level" required="1" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" context="{'product_id': context.get('product_id', False)}"/>
                            <field name="visible_to_client" invisible="1"/>
                            <field name="reccommend" attrs="{'readonly':[('visible_to_client','!=', True)]}"/>
                        </tree>
                    </field>
                    <footer>
                        <button name="update_service_level" string="Confirm" type="object" class="btn-primary"/>
                        or
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="cs_quotation_order_form_view" model="ir.ui.view">
            <field name="name">sale.order.form.view</field>
            <field name="model">sale.order</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form create="false" delete="false">
                    <header>
                        <button name="action_cancel" attrs="{'invisible':[('has_revision','=',True)]}" string="Reject"
                                type="object" class="btn-default"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,sent,cancel"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                                <field name="is_seen" invisible="1"/>
                            </h1>
                        </div>
                        <group col="4">
                            <field name="source_lang_id" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" readonly="1"/>
                            <field name="create_date" string="Created On" readonly="1" />
                            <label for="pending_since" />
                            <div>
                                <field name="pending_since" readonly="1" class="oe_inline"/>
                            </div>
                            <field name="mem_id" readonly="1" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                            <field name="partner_id" domain="[('type', '!=', 'end_client'),('is_portal', '=', True),('is_company', '=', False)]"
                                   readonly="1" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                            <label for="currency_id" />
                            <div>
                                <field name="currency_id" force_save="1" required="1" readonly="1" class="oe_inline"
                                       options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                <button name="change_currency" type="object" string="Change"
                                        class="oe_inline oe_link" style="padding-left:4px;" attrs="{'invisible':[('state','=','cancel')]}"/>
                            </div>
                            <field name="country" readonly="1"/>
                            <field name="client_deadline" force_save="1" readonly="1"/>
                            <field name="deadline" readonly="1" force_save="1" options="{'datepicker': {'disable_past_dates': true}}"/>
                            <label for="end_client_id" />
                            <div>
                                <field name="end_client_id" force_save="1" readonly="1" class="oe_inline"
                                       options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                <button name="update_end_client_domain" type="object" string="Configure"
                                        class="oe_inline oe_link" style="padding-left:4px;" attrs="{'invisible':[('state','=','cancel')]}"/>
                            </div>
                            <label for="organization_id"/>
                            <div>
                                <field name="organization_name" force_save="1" readonly="1" attrs="{'invisible':[('organization_id','!=', False),('organization_name','=', False)]}"/>
                                <field name="organization_id" attrs="{'invisible':[('organization_name','!=', False),('organization_id','=', False)]}" readonly="1" force_save="1" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                            </div>
                            <field name="product_id" required="1" force_save="1" domain="[('product_bool', '=', True)]"
                                   options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                            <field name="priority" required="1" force_save="1"/>
                            <field name="inquiry_date" readonly="1"/>
                            <field name="process_type" attrs="{'invisible':[('process_type','=',False)]}" readonly="1"/>
                            <label for="inquiry_id" />
                            <div>
                               <field name="inquiry_id" readonly="1"
                                      options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                <button name="open_inquiry_readonly" type="object" string="View"
                                        class="oe_inline oe_link" style="padding-left:4px;"/>
                            </div>
                            <field name="po_number" string="PO Number"
                                   attrs="{'invisible':[('po_required','=',False)]}"/>
                            <label for="parent_asn_ref_id" attrs="{'invisible':[('parent_asn_ref_id','=',False)]}"/>
                            <div>
                                <field name="parent_asn_ref_id" readonly="1" class="oe_inline"
                                    options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"
                                    attrs="{'invisible':[('parent_asn_ref_id','=',False)]}"/>
                                <button name="open_original_asn" type="object" string="View"
                                    class="oe_inline oe_link" style="padding-left:4px;"
                                    attrs="{'invisible':[('parent_asn_ref_id','=',False)]}"/>
                            </div>
                            <field name="tax_percent_ids" widget="many2many_tags" invisible="1"/>
                            <field name="type" invisible="1"/>
                            <field name="has_revision" invisible="1"/>
                            <field name="is_file_revision" invisible="1"/>
                            <field name="unit_id" invisible="1" force_save="1"/>
                            <field name="ip_address" invisible="1"/>
                            <field name="browser" invisible="1"/>
                            <field name="quotation_ref_id" invisible="1"/>
                            <field name="po_required" invisible="1"/>
                        </group>
                        <group>
                            <group>
                                <field name="area_type" required="1"/>
                                <field name="level3_other_area_bool" invisible="1"/>
                                <field name="subject_industrial_area_level1_id"
                                       domain="[('area_type', '=', area_type)]"
                                       required="1"
                                       options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"
                                       attrs="{'readonly': ['|',('state', '=','sent'),('state', '=','revise')]}"/>
                                <field name="subject_industrial_area_level2_id"
                                       domain="[('level2_id.level1_id', '=', subject_industrial_area_level1_id)]"
                                       required="1"
                                       options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"
                                       attrs="{'readonly': ['|',('state', '=','sent'),('state', '=','revise')]}"/>
                                <field name="subject_industrial_area_level3_id"
                                       domain="[('level3_id.parent_level2_line_id', '=', subject_industrial_area_level2_id)]"
                                       required="1"
                                       options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"
                                       attrs="{'readonly': ['|',('state', '=','sent'),('state', '=','revise')]}"/>
                                <field name="level3_other_area" attrs="{'invisible':[('level3_other_area_bool','=', False)],'required': [('level3_other_area_bool', '=', True)]}"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                            <page string="ASN Languages" name="asn_lang">
                                <group>
                                    <left>
                                        <button name="add_translation_level" string="Add Translation Level"
                                                type="object" class="btn-primary"
                                                context="{'product_id': product_id}"
                                                attrs="{'invisible':['|',('has_revision','=',True),('is_file_revision','=',True)]}"/>
                                    </left>
                                </group>
                                <group string="Add Translation Level" invisible="1">
                                    <field name="add_translation_level_line" nolabel="1" force_save="1">
                                        <tree editable="bottom">
                                            <field name="service_level_id" string="Translation Level" required="1" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" context="{'product_id': context.get('product_id', False)}"/>
                                            <field name="visible_to_client" invisible="1"/>
                                            <field name="reccommend" attrs="{'readonly':[('visible_to_client','!=', True)]}"/>
                                        </tree>
                                    </field>
                                </group>
                                <field name="order_line" force_save="1" widget="section_and_note_one2many" string="ASN Languages">
                                    <tree create="0" editable="bottom" delete="0">
                                        <field name="source_lang_id" readonly="1"/>
                                        <field name="target_lang_id" readonly="1"/>
                                        <field name="deadline" />
                                        <button name="action_show_quotation_details" string="Quotation Details"
                                                type="object" icon="fa-list" options='{"warn": true}' attrs="{'invisible':[('state','=','cancel')]}"/>
                                        <field name="name" invisible="1"/>
                                        <field name="state" invisible="1"/>
                                    </tree>
                                    <form>
                                        <group col="4">
                                            <field name="source_lang_id" readonly="1" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                            <field name="target_lang_id" domain="[('id','!=',source_lang_id)]" readonly="1" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                            <field name="unit_id" readonly="1" force_save="1" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                            <field name="client_deadline" />
                                            <field name="character_count" />
                                            <field name="deadline" />
                                            <field name="mainfile_count" invisible="1"/>
                                            <field name="referencefile_count" invisible="1"/>
                                            <field name="name" invisible="1"/>
                                            <field name="order_id" invisible="1"/>
                                            <field name="update_rec" required="0" invisible="1"/>
                                        </group>
                                        <notebook>
                                            <page string="Client File &amp; Instructions" name="client_file_ins">
                                                <separator string="Instructions"/>
                                                <field name="sale_instruction_line" force_save="1">
                                                    <tree editable="bottom">
                                                        <field name="name" required="1" attrs="{'readonly': ['|', ('is_original_ins','=',True), ('is_default_ins','=',True)]}"/>
                                                        <field name="mark_reviewed" />
                                                        <field name="send_ins_to_pm"/>
                                                        <field name="is_original_ins" invisible="1"/>
                                                        <field name="is_default_ins" invisible="1"/>
                                                    </tree>
                                                    <form>
                                                        <group>
                                                            <group>
                                                                <field name="name" required="1"/>
                                                                <field name="mark_reviewed"/>
                                                                <field name="send_ins_to_pm"/>
                                                            </group>
                                                        </group>
                                                    </form>
                                                </field>
                                                <div class="Buttonright">
<!--                                                    <button name="download_all_translation_files" string="Download All" type="object"-->
<!--                                                            class="fa fa-download btn-primary"/>-->
                                                </div>
                                                <separator string="Translation Files"/>
                                                <field name="sale_original_file_line">
                                                    <tree editable="bottom" create="0" edit="0" delete="0">
                                                        <field name="url" required="1" readonly="1" widget="url" text_field="datas_fname" string="File Content"/>
                                                        <field name="datas" force_save="1" widget="custom_binary_field" filename="datas_fname" invisible="1"/>
                                                        <field name="character_count" invisible="1" default="0"/>
                                                        <field name="file_type" invisible="1"/>
                                                        <field name="datas_fname" invisible="1"/>
                                                        <field name="name" invisible="1"/>
                                                        <button name="move_to_refrence" help="Move to Reference File" class="fa fa-arrow-right Buttonright"
                                                                style="font-size:20px;color:green;" type="object" groups="ulatus_cs.group_cs_user"/>
                                                    </tree>
                                                    <form>
                                                        <group>
                                                            <field name="url" required="1" readonly="1" widget="url" text_field="datas_fname" string="File Content"/>
                                                            <field name="datas" force_save="1" widget="custom_binary_field" filename="datas_fname" invisible="1"/>
                                                            <field name="character_count" invisible="1" default="0"/>
                                                            <field name="file_type" invisible="1"/>
                                                            <field name="datas_fname" invisible="1"/>
                                                        </group>
                                                    </form>
                                                </field>
<!--                                                <div class="Buttonright">-->
<!--                                                    <button name="download_all_reference_files" string="Download All" type="object"-->
<!--                                                            class="fa fa-download btn-primary"/>-->
<!--                                                </div>-->
                                                <separator string="Reference Files"/>
                                                <field name="reference_assignment_line">
                                                    <tree editable="bottom" create="0" delete="0">
                                                        <field name="url" required="1" readonly="1" widget="url" text_field="datas_fname" string="File Content"/>
                                                        <field name="datas" force_save="1" widget="custom_binary_field" filename="datas_fname" invisible="1"/>
                                                        <field name="file_type" invisible="1"/>
                                                        <field name="datas_fname" invisible="1"/>
                                                        <field name="name" invisible="1"/>
                                                    </tree>
                                                    <form>
                                                        <group>
                                                            <field name="url" required="1" readonly="1" widget="url" text_field="datas_fname" string="File Content"/>
                                                            <field name="datas" widget="custom_binary_field" filename="datas_fname" invisible="1"/>
                                                            <field name="file_type" force_save="1" invisible="1"/>
                                                            <field name="datas_fname" invisible="1"/>
                                                        </group>
                                                    </form>
                                                </field>
                                            </page>
                                            <page string="Service &amp; Memsource" name="service_memsource_ins">
                                                <group name="translation_level" string="Translation Level's">
                                                <field name="service_level_line" force_save="1" nolabel="1">
                                                    <tree editable="bottom" create="1">
                                                        <field name="service_level_id" readonly="1" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                                        <field name="deadline" required="1"/>
                                                        <field name="unit_rate" required="1"/>
                                                        <field name="fee" required="1"/>
                                                        <field name="visible_to_client" readonly="1" invisible="1"/>
                                                        <field name="reccommend" readonly="1"/>
                                                        <field name="sale_service_line_id" invisible="1"/>
                                                        <field name="is_original_service_level" invisible="1"/>
                                                    </tree>
                                                    <form create="1">
                                                        <group>
                                                            <group>
                                                                <field name="service_level_id" readonly="1" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                                                <field name="deadline" required="1"/>
                                                                <field name="unit_rate" required="1"/>
                                                                <field name="fee" required="1"/>
                                                                <field name="reccommend" readonly="1"/>
                                                                <field name="sale_service_line_id" invisible="1"/>
                                                                <field name="is_original_service_level" invisible="1"/>
                                                            </group>
                                                        </group>
                                                    </form>
                                                </field>
                                            </group>
                                                <separator string="Add-ons Fee"/>
                                                <field name="addons_fee_line" force_save="1">
                                                    <tree editable="bottom">
                                                        <field name="addons_id" domain="[('addons_service_bool', '=', True)]"
                                                               options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                                        <field name="no_of_unit" attrs="{'readonly': [('enter_unit_bool','=',False)]}"/>
                                                        <field name="price" required="1"/>
                                                        <field name="total_price" readonly="1" force_save="1"/>
                                                        <field name="unit_id" readonly="1" force_save="1"
                                                               options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                                        <field name="enter_unit_bool" invisible="1"/>
                                                    </tree>
                                                    <form>
                                                        <group>
                                                            <group>
                                                                <field name="addons_id" domain="[('addons_service_bool', '=', True)]"
                                                                       options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                                                <field name="no_of_unit" />
                                                                <field name="price" required="1"/>
                                                                <field name="total_price" readonly="1" force_save="1"/>
                                                                <field name="unit_id" readonly="1"
                                                                       options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                                            </group>
                                                        </group>
                                                    </form>
                                                </field>
                                                <!-- <group class="oe_subtotal_footer oe_right" colspan="2" name="translation_total">
                                                    <field name="total_unit" widget='monetary'/>
                                                    <field name="total_amount" widget='monetary'/>
                                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                                        <label for="translation_cost" />
                                                    </div>
                                                    <field name="translation_cost" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                                </group> -->
                                            </page>

                                        </notebook>
                                    </form>
                                </field>
                                <group invisible="1" class="oe_subtotal_footer oe_right" colspan="2" name="total">
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="lowest_fee" readonly="1" force_save="1"/>
                                    </div>
                                    <field name="lowest_fee" readonly="1" force_save="1" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="char_count" readonly="1" force_save="1"/>
                                    </div>
                                    <field name="char_count" readonly="1" force_save="1" nolabel="1" class="oe_subtotal_footer_separator"/>
                                </group>
                                <group string="Add-ons Price Summary">
                                    <field name="sale_order_addons_line" readonly="1" nolabel="1" force_save="1">
                                        <tree editable="bottom" edit="false" create="false" delete="false">
                                            <field name="addons_service_id" readonly="1" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" domain="[('addons_service_bool','=', True)]"/>
                                            <field name="unit_id" />
                                            <field name="unit" invisible="1" readonly="0"/>
                                            <field name="addons_price" force_save="1" readonly="1"/>
                                            <field name="rate" invisible="1"/>
                                            <field name="show_option" invisible="1"/>
                                            <field name="enter_unit_bool" invisible="1"/>
                                        </tree>
                                        <form create="false" delete="false">
                                            <group>
                                                <group>
                                                    <field name="addons_service_id" readonly="1" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" domain="[('addons_service_bool','=', True)]"/>
                                                    <field name="unit" readonly="1"/>
                                                    <field name="addons_price" force_save="1" readonly="1"/>
                                                    <field name="show_option" invisible="1"/>
                                                    <field name="enter_unit_bool" invisible="1"/>
                                                </group>
                                            </group>
                                        </form>
                                    </field>
                                </group>
                                <group string="Test" invisible="1">
                                    <field name="translation_file_line" nolabel="1">
                                        <tree editable="bottom">
                                            <field name="datas"
                                                   widget="custom_binary_field" filename="datas_fname"/>
                                            <field name="file_type" invisible="1"/>
                                            <field name="datas_fname" invisible="1"/>
                                            <field name="name" invisible="1"/>
                                        </tree>
                                    </field><br/>
                                    <field name="refrence_file_line" nolabel="1">
                                        <tree editable="bottom">
                                            <field name="datas" widget="custom_binary_field" filename="datas_fname"/>
                                            <field name="file_type" invisible="1"/>
                                            <field name="datas_fname" invisible="1"/>
                                            <field name="name" invisible="1"/>
                                        </tree>
                                    </field><br/>
                                    <field name="instruction_line" nolabel="1">
                                        <tree>
                                            <field name="name" />
                                            <field name="is_original_ins" invisible="0"/>
                                        </tree>
                                    </field>
                                </group>
                                <group>
                                    <group name="pmc">
                                        <label for="project_management_cost" string="Project Management Cost"/>
                                        <div>
                                            <field name="project_management_cost" class="oe_inline"/>
                                            <span class="o_form_label oe_inline"> (%)</span>
                                        </div>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="mark_as_special" />
                                        <field name="trial_flag" string="Mark as Trial"/>
                                        <field name="send_inv_monthly" invisible="1"/>
                                        <field name="advance_payment" required="1"
                                               attrs="{'readonly':[('send_inv_monthly','=',True)]}"/>
                                        <field name="advance_payment_value"
                                               attrs="{'readonly':
                                                        ['|',
                                                        ('state','in',['sent', 'revise']),
                                                        ('advance_payment','in',['0','100'])]}" force_save="1"/>
                                    </group>
                                </group>
                                <group invisible="1">
                                    <group string="Special Checklist" attrs="{'invisible': [('checklist_line','=',[])]}">
                                        <field name="checklist_line" nolabel="1" force_save="1">
                                            <tree create="false" delete="false" editable="bottom">
                                                <field name="checklist_id" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                                <field name="option" />
                                            </tree>
                                            <form>
                                                <group>
                                                    <group>
                                                        <field name="checklist_id" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" />
                                                        <field name="option" />
                                                    </group>
                                                </group>
                                            </form>
                                        </field>
                                    </group>
                                    <h4 attrs="{'invisible': [('additional_comments','=',False)]}">Additional Comments</h4>
                                    <field name="additional_comments" readonly="1" nolabel="1" placeholder="Additional Comments .............." attrs="{'invisible': [('additional_comments','=',False)]}"/>
                                </group>
                            </page>
                            <page string="Reason History" invisible="1" name="reason_history">
                                <field name="reason_history_line" readonly="1">
                                    <tree editable="bottom">
                                        <field name="user" />
                                        <field name="logging_date" />
                                        <field name="state" invisible="1"/>
                                        <field name="comment" />
                                    </tree>
                                    <form>
                                        <field name="user" />
                                        <field name="logging_date" />
                                        <field name="state" invisible="1"/>
                                        <field name="comment" />
                                    </form>
                                </field>
                            </page>
                        </notebook>
                        <group attrs="{'invisible':[('has_revision','=',True)]}">
                            <center>
                                <button name="preview_sale_order" type="object" string="Preview Quotation" attrs="{'invisible':[('has_revision','=',True)]}" class="btn-default"/>
                                or
                                <button name="quotation_send_to_client" string="Send to the client" type="object" class="btn-primary"
                                        attrs="{'invisible':[('has_revision','=',True)]}"/>
                            </center>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <!-- Hide Sale Search Inherited View -->
        <record id="view_cs_quotation_search_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.list.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <field name="name"/>
                    <field name="source_lang_id" />
                    <field name="pending_since" />
                    <field name="partner_id" />
                    <field name="currency_id" />
                    <field name="deadline" />
                    <field name="state" />
                    <field name="write_date" />
                    <filter string="Today" name="write_date"
                            domain="[('write_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),
                                     ('write_date', '&lt;=',datetime.datetime.now().strftime('%Y-%m-%d 23:23:59'))]"/>
                    <filter string="Pending in last 24 Hrs" name="write_date"
                            domain="[('write_date', '&lt;=', (datetime.datetime.now()-datetime.timedelta(days=1)).strftime('%Y-%m-%d 00:00:00')),
                                     ('write_date', '&gt;=',(datetime.datetime.now()-datetime.timedelta(days=1)).strftime('%Y-%m-%d 23:23:59'))]"/>
                    <filter string="Pending in last 7 Days" name="write_date"
                            domain="[('write_date','&lt;=', ((context_today()-datetime.timedelta(days=1)).strftime('%Y-%m-%d'))),
                                     ('write_date','&gt;=', ((context_today()-datetime.timedelta(days=7)).strftime('%Y-%m-%d')))]"/>
                    <filter string="Pending in last 30 Days" name="write_date"
                            domain="[('write_date', '&gt;=', (datetime.datetime.now()-datetime.timedelta(days=30)).strftime('%Y-%m-%d 00:00:00')),
                                     ('write_date', '&lt;=',(datetime.datetime.now()-datetime.timedelta(days=1)).strftime('%Y-%m-%d 23:23:59'))]"/>
                </xpath>
                <xpath expr="//filter[@name='my_sale_orders_filter']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//filter[@name='activities_my']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//filter[@name='activities_overdue']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//filter[@name='activities_today']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//filter[@name='activities_upcoming_all']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <!-- Quotation Action View -->
        <record id="action_cs_quotation_order" model="ir.actions.act_window">
            <field name="name">Draft Quotations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
             <field name="search_view_id" ref="view_cs_quotation_search_inherit"/>
            <field name="context">{'default_type':'quotation'}</field>
            <field name="domain">[('state', '=', 'draft'),('type', '=', 'quotation')]</field>
<!--            <field name="domain">[('state', '=', 'draft'),('type', '=', 'quotation'),('user_id','=',uid)]</field>-->
        </record>

        <record id="action_cs_quotation_order_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="cs_quotation_order_tree_view"/>
            <field name="act_window_id" ref="action_cs_quotation_order"/>
        </record>

        <record id="action_cs_quotation_order_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="cs_quotation_order_form_view"/>
            <field name="act_window_id" ref="action_cs_quotation_order"/>
        </record>

        <menuitem id="ulatus_quotation_menu" sequence="1" action="action_cs_quotation_order" parent="ulatus_root_quote_menu" name="Draft Quotations"/>
    </data>
</odoo>
